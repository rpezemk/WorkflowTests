<Window x:Class="TestSimple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Closing="Window_Closing" Closed="Window_Closed"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSimple"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="send" x:Name="SendSomeDataButton" Click="SendSomeDataButton_Click"/>
        <Button Content="receive" Grid.Row="1" x:Name="GetMessages" Click="GetMessages_Click"/>
        <TextBlock x:Name="MyTextBlock" Grid.Row="2"/>
    </Grid>
</Window>
