<UserControl x:Class="TestGraphical.Controls.StepControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestGraphical.Controls"
             mc:Ignorable="d" x:Name="MyStepControl"
             MinHeight="40" Width="70" Background="White" MouseDown="MyStepControl_MouseDown" MouseUp="MyStepControl_MouseUp">
    <UserControl.Resources>
        <local:ThicknessConverter x:Key="ThicknessConverter"/>
    </UserControl.Resources>
    <UserControl.Margin>
        <MultiBinding Converter="{StaticResource ResourceKey=ThicknessConverter}" Mode="OneWay">
            <Binding Path="XOffset"/>
            <Binding Path="YOffset"/>
        </MultiBinding>
    </UserControl.Margin>
    <Grid>
        <Border BorderThickness="2" BorderBrush="Black">
            <TextBlock Text="{Binding Name}"/>
        </Border>
    </Grid>
</UserControl>
