<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="PapayaWhip"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="BorderThickness" Value="1,0,1,3"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4 3"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
    </Style>


    <Style TargetType="Button" x:Key="ConfirmSave">
        <Setter Property="Background" Value="#c2f2f9"/>
    </Style>


    <Style x:Key="BlankDataGridHdr" TargetType="DataGridRowHeader">
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

</ResourceDictionary>